<Window x:Class="WpfApp.WindowLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Login" Height="220" Width="357" ResizeMode="NoResize" 
    WindowStartupLocation="CenterOwner" Background="White" Icon="Images\WpfIcon.ico">
    <Grid >
        <TextBlock Margin="152,12,0,0" VerticalAlignment="Top"><Hyperlink Click="Hyperlink_Click"><Run Text="What are my login credentials?"/></Hyperlink></TextBlock>
        <Label x:Name="label1" VerticalAlignment="Top" Margin="45,50,0,0" Height="23.277" HorizontalAlignment="Left" Width="65" Content="Email:"/>
        <Label x:Name="label2" Margin="45,88,0,69" HorizontalAlignment="Left" Width="65" Content="Password:" />
        <TextBox x:Name="emailBox" VerticalAlignment="Top" Margin="127,52,45,0" TabIndex="1" Text="debbie@company.com"/>
        <PasswordBox Margin="127,91,45,69" x:Name="passwordBox" Password="secret123" TabIndex="2" />
        <Button Height="24.5" HorizontalAlignment="Left" Margin="81.857,0,0,17" x:Name="buttonOK" VerticalAlignment="Bottom" Width="80" IsDefault="True" TabIndex="3" Click="buttonOK_Click" Content="OK"/>
        <Button Height="24.5" Margin="0,0,88.143,17" x:Name="buttonCancel" VerticalAlignment="Bottom" IsCancel="True" TabIndex="4" Content="Cancel" HorizontalAlignment="Right" Width="81"/>
        <GroupBox Margin="25,33,28,55.777" Header="Login"/>
    </Grid>
</Window>
